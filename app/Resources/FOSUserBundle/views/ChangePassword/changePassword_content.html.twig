{% form_theme form ':Form:fields.html.twig' %}

{% stylesheets 'bundles/sabrusfrontend/css/fos/*' filter='cssrewrite' %}
<link type="text/css" rel="stylesheet" href="{{ asset_url }}"/>
{% endstylesheets %}

<div>
    <div class="page-header">
        <h3>Cambiar Contrase√±a</h3>
    </div>
    <div class="row">
        <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" role="form"
              class="form">
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.current_password, null, { 'label_attr' : {'class' : 'label-text' } } ) }}
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password,{'attr' : {'class' : 'form-control' } } ) }}
            </div>
            <div class="form-group">
                {{ form_label(form.new | first, null, { 'label_attr' : {'class' : 'label-text' } } ) }}
                {{ form_errors(form.new | first) }}
                {{ form_widget(form.new | first, {'attr' : {'class' : 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.new | last, null, { 'label_attr' : {'class' : 'label-text' } } ) }}
                {{ form_errors(form.new | last) }}
                {{ form_widget(form.new | last, {'attr' : {'class' : 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_rest(form) }}
            </div>
            <div class="text-center">
                <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}"
                       class="btn btn-primary"/>
                <a href="{{ path('fos_user_profile_show') }}" class="btn btn-default">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
