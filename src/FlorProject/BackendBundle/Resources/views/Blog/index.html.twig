{% extends 'FlorProjectBackendBundle:Util:base.html.twig' %}

{% set page_title="Blog" %}
{% set title_small="Artículos del blog" %}
{#{% set datatable_id="family_table" %}#}

{% block breadcrumb %}
    <li>
        <i class="fa fa-home"></i>
        <a href="{{ path('backend_dashboard') }}">Inicio</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="#">Blog</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="#">Artículos</a>
    </li>
{% endblock %}


{% block page_level_plugins_styles %}
{% endblock %}

{% block page_level_plugin_scripts %}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('backend_blog_new') }}" class="btn green">
                Nueva entrada
            </a>
            <div class="col-md-12 col-sm-12 article-block">
                {% for entity in entities %}
                    <div class="row">
                        <div class="blog-article">
                            <h3>
                                <a class="" href="{{ path('backend_blog_show', { 'id': entity.id }) }}">{{ entity.title }}</a>
                            </h3>

                            <p>
                                {{ entity.resume|raw }}
                            </p>

                            <div>
                                <div class="pull-left">
                                    <a class="btn blue" href="{{ path('backend_blog_show', { 'id': entity.id }) }}">Continuar leyendo <i class="m-icon-swapright m-icon-white"></i></a>
                                    <a class="btn blue" href="{{ path('backend_blog_edit', { 'id': entity.id }) }}">Editar <i class="icon-pencil"></i></a>
                                    <a class="btn blue" href="{{ path('backend_blog_delete_confirm', { 'id': entity.id }) }}">Eliminar <i class="icon-trash"></i></a>

                                </div>
                                <ul class="list-inline pull-right">
                                    <li>
                                        <i class="fa fa-calendar"></i>
                                        <a href="#">{{ entity.creationDate|date("d-m-Y H:i") }}</a>
                                    </li>
                                    <li>
                                        {#<i class="fa fa-comments"></i>
                                        <a href="#">38 Comments </a>#}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}