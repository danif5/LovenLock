{% extends 'FlorProjectBackendBundle:Util:form.html.twig' %}

{% set page_title="Editar Regalos" %}
{% set title_small="edición de informacion de regalos" %}

{% block breadcrumb %}
    <li>
        <i class="fa fa-home"></i>
        <a href="{{ path('backend_dashboard') }}">Inicio</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="{{ path('backend_gift_list') }}">Regalos</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="#">Editar Regalos</a>
    </li>
{% endblock %}

{% block page_level_plugins_styles %}
    <link rel="stylesheet" type="text/css" href="{{  asset('bundles/nivalmetronictemplate/assets/global/plugins/select2/select2.css') }}"/>
{% endblock %}

{% block page_level_plugin_scripts %}
    <script type="text/javascript" src="{{  asset('bundles/nivalmetronictemplate/assets/global/plugins/select2/select2.min.js') }}"></script>
{% endblock %}

{% block page_level_script %}
    <script src="{{  asset('bundles/nivalmetronictemplate/assets/global/scripts/metronic.js') }}" type="text/javascript"></script>
    <script src="{{  asset('bundles/nivalmetronictemplate/assets/admin/layout/scripts/layout.js') }}" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function() {
            //Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
        });
    </script>
{% endblock %}

{% block form_header %}
    <div class="caption">
        <i class="icon-gift font-red-sunglo"></i>
        <span class="caption-subject font-red-sunglo bold uppercase">Editar Regalos</span>
        <span class="caption-helper">edición de datos de regalos</span>
    </div>
{% endblock %}

{% block form_body %}
    {% if form is defined %}
        <form action="{{ path('backend_gift_update') }}"  {{ form_enctype(form) }} method="POST" class="form-horizontal">
            <div class="form-body">
                {{ form_errors(form) }}
                <input type="hidden" value="{{ gift.id }}" name="gift_id" />

                {{ form_errors(form) }}

                <div class="form-group">
                    <label class="col-md-3 control-label">Nombre</label>
                    <div class="col-md-4">
                        {{ form_row(form.name) }}
                        <span class="help-block">
														{{ form_errors(form.name) }} </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Precio</label>
                    <div class="col-md-4">
                        {{ form_row(form.price) }}
                        <span class="help-block">
														{{ form_errors(form.price) }} </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Familia</label>
                    <div class="col-md-4">
                        {{ form_row(form.family) }}
                        <span class="help-block">
														{{ form_errors(form.family) }} </span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Media</label>
                    <div class="col-md-4">
                        {{ form_row(form.file) }}
                        <span class="help-block">
														{{ form_errors(form.file) }} </span>
                    </div>
                </div>

                {{ form_rest(form) }}
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-4">
                        <button type="submit" class="btn green">Aceptar</button>
                        <a href="{{ path('backend_gift_list') }}" class="btn default">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    {% endif %}
{% endblock %}

