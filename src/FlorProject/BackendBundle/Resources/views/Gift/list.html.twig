{% extends 'FlorProjectBackendBundle:Util:list.html.twig' %}

{% set page_title="Regalos" %}
{% set title_small="Listado de Regalos" %}
{% set datatable_id="family_table" %}

{% block breadcrumb %}
    <li>
        <i class="fa fa-home"></i>
        <a href="{{ path('backend_dashboard') }}">Inicio</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="#">Regalos</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li>
        <a href="#">Listado de Regalos</a>
    </li>
{% endblock %}

{% block porlet_title %}
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i>Regalos
        </div>
    </div>
{% endblock %}

{% block new_button  %}
    <a href="{{ path('backend_gift_new') }}" class="btn green">
        Nuevo Regalo <i class="fa fa-plus"></i>
    </a>
{% endblock %}

{% block table_header %}
    <th width="5%">
        ID
    </th>
    <th width="20%">
        Imagen
    </th>
    <th width="15%">
        Tipo
    </th>
    <th width="25%">
        Nombre
    </th>
    <th width="10%">
        Precio
    </th>
    <th width="10%">
        Familia
    </th>
    <th width="15%">
        Acciones
    </th>
{% endblock %}

 {% block table_filters %}
     <td>
     </td>
     <td>
     </td>
     <td>
         <select name="filter_gift_type" class="form-control form-filter input-sm">
             <option value="">Seleccionar...</option>
             <option value="1">Candado</option>
             <option value="2">Flor</option>
             <option value="3">Caja</option>
         </select>
     </td>
     <td>
         <input type="text" class="form-control form-filter input-sm" name="filter_name">
     </td>
     <td>
         <div class="margin-bottom-5">
             <input type="text" class="form-control form-filter input-sm" name="filter_price_from" placeholder="De"/>
         </div>
         <input type="text" class="form-control form-filter input-sm" name="filter_price_to" placeholder="A"/>
     </td>
     <td>
         <input type="text" class="form-control form-filter input-sm" name="filter_family_name">
     </td>
     <td>
         <div class="margin-bottom-5">
             <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i></button>
             <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i></button>
         </div>

     </td>
 {% endblock %}

{% block page_level_script %}
    <script src="{{  asset('bundles/nivalmetronictemplate/assets/global/scripts/metronic.js') }}" type="text/javascript"></script>
    <script src="{{  asset('bundles/nivalmetronictemplate/assets/admin/layout/scripts/layout.js') }}" type="text/javascript"></script>
    <script src="{{  asset('bundles/nivalmetronictemplate/assets/global/scripts/datatable.js') }}"></script>
    <script src="{{  asset('bundles/florprojectbackend/js/gift/gift-table.js') }}"></script>
    <script>
        jQuery(document).ready(function() {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            GiftTableAjax.init();
        });
    </script>
{% endblock %}